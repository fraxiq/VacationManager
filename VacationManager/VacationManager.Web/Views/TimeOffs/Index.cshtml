@model IEnumerable<BaseTimeOff>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div id="Choose Time off">
    <ul>
        <li>
            <a href="#">TimeOffs</a>
            <ul>
                <li><a href="PaidTimeOff">Paid Time Off</a></li>
                <li><a href="UnpaidTimeOff">Unpaid Time Off</a></li>
                <li><a href="SickTimeOff">Sick Time Off</a></li>
            </ul>
        </li>
    </ul>
</div>

<p>

    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <form asp-action="Index" method="get">
    </form>

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.To)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHalfDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsApproved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requestor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @item.From
                </th>
                <th>
                    @item.To
                </th>
                <th>
                    @item.CreatedOn
                </th>
                <th>
                    @item.IsHalfDay
                </th>
                <th>
                    @item.IsApproved
                </th>
                <th>
                    @item.Requestor
                </th>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                    @if (User.IsInRole("CEO"))
                    {
                        <a asp-action="Approve" asp-route-id="@item.id">Approve</a>

                    }
                    @if (User.IsInRole("CEO"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.id">Edit</a> 
}
                    @if (User.IsInRole("CEO"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
